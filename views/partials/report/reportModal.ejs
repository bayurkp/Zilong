<!-- Form Modal -->
<form id="reportModalForm" method="POST" action="/report/books/">
  <div class="modal fade" id="reportModal" data-bs-keyboard="false"
      tabindex="-1">
    <div class="modal-dialog modal-dialog-scrollable modal-dialog-centered">
      <div class="modal-content">
        <div class="modal-header">
          <h1 class="modal-title mb-3 fs-5">
            Filter
          </h1>
          <button type="button" class="btn-close"
              data-bs-dismiss="modal"></button>
        </div>
        <div class="modal-body">
          Collection Name
          <hr>
          <div class="form-check form-check-inline" id="collection">
            <input class="form-check-input" type="radio" name="collection"
                id="books" value="books" checked>
            <label class="form-check-label" for="books">
              Books
            </label>
          </div>
          <div class="form-check form-check-inline" id="collection">
            <input class="form-check-input" type="radio" name="collection"
                id="users" value="users">
            <label class="form-check-label" for="users">
              Users
            </label>
          </div>
          <div class="form-check form-check-inline" id="collection">
            <input class="form-check-input" type="radio" name="collection"
                id="transactions" value="transactions">
            <label class="form-check-label" for="transactions">
              Transactions
            </label>
          </div>
          <hr>

          <!-- Container for Form Filter -->
          <div id="containerFormFilter">
            <div id="formFilterBooks">
              <%- include('./formFilterBooks.ejs') %>
            </div>

            <div id="formFilterUsers" style="display: none;">
              <%- include('./formFilterUsers.ejs') %>
            </div>

            <div id="formFilterTransactions" style="display: none;">
              <%- include('./formFilterTransactions.ejs') %>
            </div>
          </div>

        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary"
              data-bs-dismiss="modal">
            Back
          </button>
          <button type="submit" name="submit" value="true"
              class="btn btn-success">Search
          </button>
        </div>
      </div>
    </div>
  </div>
</form>

<script>
  $(document).ready(function() {
    $("input[type='radio'][name='collection']").click(function() {
      let formFilterId = "#formFilter" + $(this).val().charAt(0)
        .toUpperCase() + $(this).val().substr(1).toLowerCase();
      $("#reportModalForm").attr('action', "/report/" + $(this).val());
      $(formFilterId).show();
      $("#containerFormFilter").children().not($(formFilterId)).hide();
    });
  });
</script>