    </div>
  </div>

  <div id="containerFormPublicationYear">
    <!-- Use condition -->
    <div id="byConditionPublicationYearForm" class="row">
      <div class="col">
        <div class="form-floating mb-3">
          <select name="publicationYear" class="form-select"
              id="operatorPublicationYear">
            <option value="eq" selected> = </option>
            <option value="gt"> &gt </option>
            <option value="gte"> &gt= </option>
            <option value="lt"> &lt </option>
            <option value="lte"> &lt= </option>
            <option value="ne"> != </option>
          </select>
          <label for="operatorPublicationYear">Operator</label>
        </div>
      </div>

      <div class="col">
        <div class="form-floating mb-3">
          <input type="number" class="form-control" id="valuePublicationYear"
              placeholder="Value" min="1800" max="2023" step="1"
              name="publicationYear" />
          <label for="valuePublicationYear">Value</label>
        </div>
      </div>
    </div>

    <!-- Use range -->
    <div id="byRangePublicationYearForm" class="row" style="display: none;">
      <div class="col">
        <div class="form-floating mb-3">
          <input type="number" class="form-control"
              id="startValuePublicationYear" placeholder="Start" min="1800"
              max="2023" step="1" name="publicationYear" />
          <label for="startValuePublicationYear">Start</label>
        </div>
      </div>

      <div class="col">
        <div class="form-floating mb-3">
          <input type="number" class="form-control" id="endValuePublicationYear"
              placeholder="End" min="1800" max="2023" step="1"
              name="publicationYear" />
          <label for="endValuePublicationYear">End</label>
        </div>
      </div>
    </div>
  </div>

  <script>
    $(document).ready(function() {
      $("input[type='radio'][name='publicationYear']").click(function() {
        let formPublicationYearId = "#" + $(this).val() +
          "PublicationYearForm";
        console.log(formPublicationYearId);
        $(formPublicationYearId).show();
        $("#containerFormPublicationYear").children().not($(
            formPublicationYearId))
          .hide();
      });
    });
  </script>
</div>

