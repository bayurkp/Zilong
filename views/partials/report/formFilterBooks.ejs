<!-- Publication Year -->
<hr>
<div id="containerPublicationYear">
  <p class="mb-3">By Publication Year</p>
  <div class="mb-3" id="buttons">
    <div class="form-check form-check-inline">
      <input class="form-check-input" id="byConditionPublicationYearButton"
          type="radio" name="publicationYear" value="byCondition" checked>
      <label class="form-check-label" for="byConditionPublicationYearButton">
        Condition
      </label>
    </div>
    <div class="form-check form-check-inline">
